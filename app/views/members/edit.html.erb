<div class="content">
	<ol class="breadcrumb">
		<li class="breadcrumb-item active">Show Team Management / Edit Member</li>
	</ol>
	<div class="container">
		<%= form_for @member, :html => {:multipart => true} do |f| %>

			<div class="form-group">
				<%= f.label :name %>
				<%= f.text_field :name, class:'form-control col-md-3'%>
			</div>

			<div class="form-group">
				<%= f.label :age %>
				<%= f.number_field  :age, class:'form-control col-md-3' %>
			</div>

			<div class="form-group">
				<%= f.label :image %>
				<div class="img-container">
					<%= image_tag @member.image.url, id:"img_prev1", class:"img-thumbnail hidden" %>
				</div>
				<%= f.file_field :image, id: "main-upload", :class => "btn btn-default", onchange:"preview_image(event, 'img_prev1')"%>
			</div>

			<div class="form-group">
				<%= f.label :description %>
				<%= f.text_area :description, class:'form-control', rows: '7'%>
			</div>

			<%= f.submit "Submit", class:'btn btn-primary' %>
		<% end %>
	</div>
</div>