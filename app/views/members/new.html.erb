<div class="content">
	<ol class="breadcrumb">
		<li class="breadcrumb-item active">Show Team Management / Add Member</li>
	</ol>
	<div class="container">
		<%= form_for @member, :html => {:multipart => true} do |f| %>

			<% if @member.errors.any? %>
				<% @member.errors.full_messages.each do |msg| %>
					<div class="alert alert-danger"><%= msg %></div>
				<% end %>
			<% end %>

			<div class="form-group">
				<%= f.label :name %>
				<%= f.text_field :name, class:'form-control col-md-3', placeholder:'Name'%>
			</div>


			<div class="form-group">
				<%= f.label :age %>
				<%= f.number_field  :age, class:'form-control col-md-3', placeholder:'Age' %>
			</div>


			<div class="form-group">
				<%= f.label :image %>
				<div class="img-container">
					<img id="img_prev1" src="#" alt="" class="img-thumbnail hidden"/>
				</div>
				<%= f.file_field :image, id: "main-upload", :class => "btn btn-default", onchange:"preview_image(event, 'img_prev1')"%>
			</div>

			<div class="form-group">
				<%= f.label :description %>
				<%= f.text_area :description, class:'form-control', rows:'7', placeholder:'Enter a description here ...'%>
			</div>

			<%= f.submit "Submit", class:'btn btn-primary' %>
		<% end %>
	</div>
</div>