<div class="content">
	<ol class="breadcrumb">
		<li class="breadcrumb-item active">Stallions Management / Edit Stallion</li>
	</ol>
	<div class="container">
		<%= form_for @stallion, :html => {:multipart => true} do |f| %>

			<% if @stallion.errors.any? %>
				<% @stallion.errors.full_messages.each do |msg| %>
					<div class="alert alert-danger"><%= msg %></div>
				<% end %>
			<% end %>
			
			<div class="form-row">
				<div class="form-group col-md-6">
					<%= f.label :name %>
					<%= f.text_field :name, class:'form-control '%>
				</div>
				<div class="form-group col-md-6">
					<%= f.label :birth_date %>
					<%= f.date_field :birth_date, class:'form-control '%>
				</div>
			</div>

			<div class="form-group">
				<div class="form-check">
					<%= f.label :for_sale %>
					<%= f.check_box :for_sale?, {class:'form-check-input'}, :checked=> false%>
				</div>
			</div>

			<div class="form-group">
				<%= f.label :price %>
				<%= f.number_field  :price, {class:'form-control col-md-2', placeholder:'Price($)'} %>
			</div>

			<div class="form-group">
				<%= f.label :image %>
				<div class="img-container">
					<%= image_tag @stallion.image.url, id:"img_prev1", class:"img-thumbnail hidden" %>
				</div>
				<%= f.file_field :image, id: "main-upload", :class => "btn btn-default", onchange:"preview_image(event, 'img_prev1')"%>
			</div>

			<div class="form-row">
				<div class="form-group col-md-6">
					<%= f.label :reg_number %>
					<%= f.text_field :reg_number, class:'form-control' %>
				</div>
				<div class="form-group col-md-3">
					<%= f.label :sex %>
					<%= f.text_field :sex, class:'form-control '%>
				</div>
				<div class="form-group col-md-3">
					<%= f.label :colour %>
					<%= f.text_field :colour, class:'form-control '%>
				</div>
			</div>

			<div class="form-row">
				<div class="form-group col-md-6">
					<%= f.label :markings %>
					<%= f.text_field :markings, class:'form-control '%>
				</div>

				<div class="form-group col-md-6">
					<%= f.label :breeder %>
					<%= f.text_field :breeder, class:'form-control '%>
				</div>
			</div>
			
			<div class="form-group">
				<%= f.label :description %>
				<%= f.text_area :description, class:'form-control', rows:'7'%>
			</div>

			<div class="form-group">
				<%= f.label :mother_name %>
				<%= f.text_field :mother_name, class:'form-control col-md-3'%>
			</div>

			<div class="form-group">
				<%= f.label :mother_image %>
				<div class="img-container">
					<%= image_tag @stallion.mother_image.url, id:"img_prev2", class:"img-thumbnail hidden" %>
				</div>
				<%= f.file_field :mother_image, id: "mother-upload", :class => "btn btn-default", onchange:"preview_image(event, 'img_prev2')"%>
			</div>

			<div class="form-group">
				<%= f.label :father_name %>
				<%= f.text_field :father_name, class:'form-control col-md-3' %>
			</div>

			<div class="form-group">
				<%= f.label :father_image %>
				<div class="img-container">
					<%= image_tag @stallion.father_image.url, id:"img_prev3", class:"img-thumbnail hidden" %>
				</div>
				<%= f.file_field :father_image, id: "father-upload", :class => "btn btn-default", onchange:"preview_image(event, 'img_prev3')"%>
			</div>

			<div class="form-group">
				<%= f.label :breeding_description %>
				<%= f.text_area :breeding_description, class:'form-control', rows:'7'%>
			</div>

			<%= f.submit "Submit", class:'btn btn-primary' %>
		<% end %>
	</div>
</div>