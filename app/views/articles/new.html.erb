<div class="content">
	<ol class="breadcrumb">
		<li class="breadcrumb-item active">Blog Management / New Post</li>
	</ol>

	<div class="container">
		<%= form_for @article, :html => {:multipart => true} do |f| %>
			
			<div class="form-group">
				<%= f.label :title %>
				<%= f.text_field :title, class:'form-control', placeholder:'Title' %>
			</div>

			<div class="form-group">
					<%= f.label :image %>
					<div class="img-container">
						<img id="img_prev1" src="#" alt="" class="img-thumbnail hidden"/>
					</div>
					<%= f.file_field :image, id: "main-upload", :class => "btn btn-default", onchange:"preview_image(event, 'img_prev1')"%>
			</div>
			
			<div class="form-group">
				<%= f.label :body %>
				<%= f.text_area :body, class:'form-control', rows:'12' %>
			</div>

			<%= f.submit "Create Post", class:'btn btn-primary'%>

		<% end %>
	</div>
</div>